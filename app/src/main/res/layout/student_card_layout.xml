<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <data>
  
  </data>
  
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      android:background="#E8E6E6">
    
    <ImageView
        android:id="@+id/studentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/studentName"
        android:layout_marginRight="10dp" />
    
    <TextView
        android:id="@+id/studentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textStyle="bold"
        android:text="Ashutosh Hada"
        app:layout_constraintStart_toEndOf="@id/studentImage"
        app:layout_constraintTop_toTopOf="@id/studentImage"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/studentClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="X"
        app:layout_constraintStart_toStartOf="@id/studentName"
        app:layout_constraintTop_toBottomOf="@id/studentName"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/studentScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="100%"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/studentName"
        app:layout_constraintTop_toBottomOf="@id/studentClass"
        app:layout_constraintEnd_toEndOf="parent" />
  
  
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>